<UserControl x:Class="NatashaPad.Views.NugetManageView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:NatashaPad.ViewModels"
             x:DataType="viewModels:NugetManageViewModel"
             mc:Ignorable="d">
  <Grid RowDefinitions="*,Auto"
        Margin="16">
    <Border Grid.Row="0"
            Padding="16"
            Theme="{DynamicResource CardBorder}">
      <Grid ColumnDefinitions="*,16,*">
        <StackPanel Grid.Column="0"
                    Spacing="12">
          <TextBlock Text="已安装"
                     Classes="H6" />
          <Border Theme="{DynamicResource CardBorder}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
              <ItemsControl ItemsSource="{Binding InstalledPackages}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate x:DataType="viewModels:NugetManageViewModel+InstalledPackage">
                    <Border Margin="0,0,0,12"
                            Padding="12"
                            Theme="{DynamicResource CardBorder}">
                      <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Spacing="4">
                          <TextBlock Text="{Binding Name}"
                                     Classes="H6"
                                     TextTrimming="CharacterEllipsis" />
                          <TextBlock Text="{Binding Version}"
                                     Foreground="{DynamicResource SemiColorText3}" />
                        </StackPanel>
                        <Button Grid.Column="1"
                                Content="卸载"
                                Theme="{StaticResource OutlineButton}"
                                Classes="Danger"
                                Margin="12,0,0,0"
                                Command="{Binding UninstallCommand}" />
                      </Grid>
                    </Border>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </ScrollViewer>
          </Border>
        </StackPanel>

        <Grid Grid.Column="2"
              RowDefinitions="Auto,*">
          <StackPanel Orientation="Horizontal"
                      Spacing="12">
            <TextBox Width="240"
                     Watermark="搜索包"
                     Text="{Binding SearchText}" />
            <Button Content="搜索"
                    Theme="{StaticResource SolidButton}"
                    Classes="Primary"
                    Command="{Binding SearchCommand}" />
            <CheckBox Content="包含预发行"
                      IsChecked="{Binding IncludePrerelease}" />
          </StackPanel>
          <Border Grid.Row="1"
                  Theme="{DynamicResource CardBorder}"
                  Margin="0,12,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
              <ItemsControl ItemsSource="{Binding SearchedPackages}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate x:DataType="viewModels:NugetManageViewModel+SearchedPackage">
                    <Border Margin="0,0,0,12"
                            Padding="12"
                            Theme="{DynamicResource CardBorder}">
                      <Grid ColumnDefinitions="*,Auto,Auto"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding Name}"
                                   Classes="H6"
                                   TextTrimming="CharacterEllipsis" />
                        <ComboBox Grid.Column="1"
                                  Width="140"
                                  ItemsSource="{Binding Versions}"
                                  SelectedItem="{Binding SelectedVersion}"
                                  Margin="12,0,0,0" />
                        <Button Grid.Column="2"
                                Content="安装"
                                Theme="{StaticResource SolidButton}"
                                Classes="Success"
                                Margin="12,0,0,0"
                                Command="{Binding InstallCommand}" />
                      </Grid>
                    </Border>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </ScrollViewer>
          </Border>
        </Grid>
      </Grid>
    </Border>

    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="12"
                Margin="0,16,0,0">
      <Button Content="取消"
              Width="96"
              Theme="{StaticResource OutlineButton}"
              Command="{Binding CancelCommand}" />
      <Button Content="确认"
              Width="96"
              Theme="{StaticResource SolidButton}"
              Classes="Primary"
              Command="{Binding OkCommand}" />
    </StackPanel>
  </Grid>
</UserControl>
